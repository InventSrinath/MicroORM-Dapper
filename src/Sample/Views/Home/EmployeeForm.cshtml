@using System.Linq
@using MicroORMWithDapper
@model Employee

@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
</div>

<div class="row">
    <h1>ORM Using Dapper and features</h1>
    <table style="width:99%; background-color:#FFFFFF; padding:5px;width:99%;table-layout:fixed;" cellpadding="2" cellspacing="2">
        <tr style="height: 30px; background-color:#336699 ; color:#FFFFFF ;border: solid 1px #659EC7;">
            <td width="100" align="center"><b>Employee Name </b></td>
            <td width="120" align="center"><b>Employee Designation</b></td>
            <td width="220" align="center"><b>Address</b></td>
            <td width="220" align="center"><b>City</b></td>
            <td width="220" align="center"><b>State</b></td>
            <td width="220" align="center"><b>Zip</b></td>
        </tr>
        <tbody>
            <tr>
                <td align="center" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                    @Html.TextBoxFor(item => item.Name)
                </td>
                <td valign="top" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                    @Html.TextBoxFor(item => item.Designation)
                </td>
                <td valign="top" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                    @Html.TextBoxFor(item => item.Address.)
                </td>
            </tr>
        </tbody>
    </table>    
</div>
